<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Patient </th>
      <th>Patient id</th>
      <th>Current disease</th>
      <th>Family history</th>
      <th>Diseases history</th>
      <th>Doctor notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.patient.p_fname %></td>
        <td><%= history.patient.id %></td>
        <td><%= history.current_disease %></td>
        <td><%= history.family_history %></td>
        <td><%= history.diseases_history %></td>
        <td><%= history.doctor_notes %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

